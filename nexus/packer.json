{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-central-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*{{ user `ubuntu_version` }}-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": [
          "099720109477"
        ],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "nexus-{{ user `version` }}-amd64-ubuntu-bionic-18.04-{{ timestamp }}",
      "ami_description": "Nexus repository v{{ user `version` }} on an Ubuntu ({{ user `ubuntu_version` }}) base inage. Includes NGINX and Certbot (to be configured by Terraform). AMI generated by Packer.",
      "tags": {
        "OS_Version": "{{ user `ubuntu_version` }}",
        "Includes": "NGINX, Certbot",
        "Release": "{{ user `version` }}",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Created_By": "Packer",
        "Date": "{{ timestamp }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "nexus/nexus.service",
      "destination": "/tmp/nexus.service"
    },
    {
      "type": "shell",
      "inline": [
        "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done",
        "sudo apt update && sudo apt upgrade -y",
        "sudo apt install -y openjdk-8-jre-headless",
        "sudo mv /tmp/nexus.service /etc/systemd/system/nexus.service",
        "sudo adduser --system --group nexus",
        "wget http://download.sonatype.com/nexus/3/nexus-{{ user `version` }}-unix.tar.gz",
        "sudo tar -xvzf nexus-{{ user `version` }}-unix.tar.gz -C /opt",
        "rm nexus-{{ user `version` }}-unix.tar.gz",
        "sudo rm -rf /opt/sonatype-work/nexus3",
        "sudo mkdir -p {{ user `data-path`}}",
        "sudo chown -R nexus:nexus /$(echo {{ user `data-path`}} | cut -d \"/\" -f2)",
        "sudo ln -s {{ user `data-path`}} /opt/sonatype-work/nexus3",
        "sudo ln -s /opt/nexus-{{ user `version` }} /opt/nexus",
        "sudo -H -u nexus bash -c 'mkdir -p /home/nexus/.java/'",
        "sudo -H -u nexus bash -c 'touch /home/nexus/.java/.userprefs'",
        "echo '-Djava.util.prefs.userRoot=/home/nexus/.java' | sudo tee -a /opt/nexus-{{ user `version` }}/bin/nexus.vmoptions",
        "sudo systemctl daemon-reload",
        "sudo systemctl enable nexus.service",
        "sudo systemctl start nexus.service",
        "wget https://s3.amazonaws.com/amazoncloudwatch-agent/ubuntu/amd64/latest/amazon-cloudwatch-agent.deb",
        "sudo dpkg -i -E ./amazon-cloudwatch-agent.deb",
        "rm ./amazon-cloudwatch-agent.deb"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "nexus/manifest.json"
    }
  ]
}
